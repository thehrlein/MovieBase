<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:entries="@array/pref_language_options"
        android:entryValues="@array/pref_language_values"
        android:key="@string/pref_language_key"
        android:title="@string/pref_language_label" />

    <Preference
        android:key="@string/pref_key_delete_movies"
        android:title="Delete all favorite movies?"
        android:summary="@string/pref_summary_delete"/>

    <Preference
        android:key="@string/pref_key_delete_series"
        android:title="Delete all favorite series?"
        android:summary="@string/pref_summary_delete" />

</PreferenceScreen>