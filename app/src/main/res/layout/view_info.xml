<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/info_image"
        android:layout_width="125dp"
        android:layout_height="187dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintVertical_bias="0.027" />


    <RatingBar
        android:id="@+id/info_rating_bar"
        style="@style/Base.Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:numStars="1"
        android:rating="1"
        app:layout_constraintBottom_toBottomOf="@+id/info_image"
        android:layout_marginBottom="49dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.187"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/info_image"
        app:layout_constraintHorizontal_bias="0.492" />

    <TextView
        android:id="@+id/info_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="30.05.2017"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/info_rating_count"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/info_rating_count"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        android:layout_marginBottom="0dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/info_rating_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1076"
        app:layout_constraintBottom_toBottomOf="@+id/info_rating_bar"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/info_rating_average"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/info_rating_average"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/info_rating_average"
        app:layout_constraintHorizontal_bias="0.416" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_release"
        android:id="@+id/textView"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/info_rating_bar"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/info_rating_bar"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/info_rating_bar"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/info_rating_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="7.1"
        app:layout_constraintLeft_toRightOf="@+id/info_rating_bar"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@+id/info_rating_bar" />

    <TextView
        android:text="@string/adult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:id="@+id/textView2"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/info_adult"
        tools:text="Yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/info_release"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/info_release"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        android:layout_marginBottom="0dp" />

    <TextView
        android:text="@string/info_runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textView2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:id="@+id/textView3" />

    <TextView
        android:id="@+id/info_runtime"
        tools:text="2h 20min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/info_adult"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/info_adult"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

</android.support.constraint.ConstraintLayout>